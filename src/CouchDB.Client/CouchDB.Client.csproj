    <Version>0.6.0-beta</Version>
    <Authors>Matteo Bortolazzo</Authors>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>CouchDB.NET</PackageId>
    <Product>CouchDB.NET</Product>
