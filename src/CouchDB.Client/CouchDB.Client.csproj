    <PackageIconUrl>http://couchdb.apache.org/image/couch@2x.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/matteobortolazzo/couchdb-net</RepositoryUrl>
    <RepositoryType>Couchdb.NET</RepositoryType>
